@model WebSales.Models.EF.Category

@{
    ViewBag.Title = "Create";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card shadow container col-12 col-md-6">
        <div class="card-body">
            <h2>Thêm mới</h2>
            <h4>Loại sản phẩm</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="font-weight-bold">Tên tiếng Anh</label>
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label class="font-weight-bold">Tên tiếng Việt</label>
                @Html.EditorFor(model => model.NameVN, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NameVN, "", new { @class = "text-danger" })
            </div>

            <div class="form-group text-right">
                <input type="submit" value="Thêm" class="btn btn-success border-dark" />
                @Html.ActionLink("Quay lại", "Index", null, htmlAttributes: new { @class = "btn btn-default border-dark" })
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
